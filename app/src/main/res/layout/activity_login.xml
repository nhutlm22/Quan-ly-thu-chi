<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/gradient_background_login"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:gravity="center">

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="100dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/logo_moneymanagement" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@id/rl1"
        android:layout_alignParentLeft="true"

        android:layout_alignParentRight="true">

        <EditText
            android:id="@+id/etTaiKhoan"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="54dp"
            android:layout_marginRight="48dp"
            android:drawableLeft="@drawable/icon_user"
            android:gravity="center"
            android:hint="Nhập tài khoản"
            android:paddingLeft="8dp"
            android:paddingRight="24dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white" />

        <EditText
            android:id="@+id/etMatKhau"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_below="@+id/etTaiKhoan"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="48dp"
            android:drawableLeft="@drawable/icon_lock"
            android:gravity="center"
            android:hint="Nhập mật khẩu"
            android:paddingLeft="8dp"
            android:paddingRight="24dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white" />

        <Button
            android:id="@+id/btnDangNhap"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_below="@+id/etMatKhau"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="48dp"
            android:background="@drawable/background_login"
            android:text="Đăng nhập"
            android:textColor="#FFF"
            android:textSize="20dp" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@id/btnDangNhap"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="48dp"
            android:background="@drawable/background_login" />

    </RelativeLayout>

</RelativeLayout>