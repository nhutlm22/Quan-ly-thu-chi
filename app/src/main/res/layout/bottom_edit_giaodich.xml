<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    style="@style/AppBottomSheetDialogTheme">

    <View
        android:layout_width="70dp"
        android:layout_height="3dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPinkDark"
        />

    <TextView
        android:id="@+id/tvCapNhatGiaoDich"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="CẬP NHẬT GIAO DỊCH"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        />

        <EditText
            android:id="@+id/etTieuDe"
            android:layout_width="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textColor="#FFF"
            android:hint="Tiêu đề"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:textColorHint="#FFF"
            android:layout_height="48dp"/>

         <TextView
            android:id="@+id/tvNgay"
            android:layout_width="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
             android:layout_marginTop="8dp"
             android:textStyle="bold"
            android:textColor="#FFF"
            android:hint="Ngày / tháng / năm"
            android:gravity="center_vertical"
             android:inputType="text"
             android:textSize="20dp"
             android:paddingLeft="4dp"
            android:textColorHint="#FFF"
            android:layout_height="48dp"/>

    <EditText
        android:id="@+id/etTien"
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:hint="Số tiền"
        android:inputType="numberDecimal"
        android:textColorHint="#FFF"
        android:layout_height="48dp"/>

    <EditText
        android:id="@+id/etMoTa"
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="#FFF"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:hint="Mô tả"
        android:textColorHint="#FFF"
        android:layout_height="48dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTrangThaiGiaoDich"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:text="Trạng thái"
            android:textStyle="bold"
            android:paddingLeft="4dp"
            android:gravity="center"/>

        <Spinner
            android:id="@+id/spnGiaoDich"
            android:layout_width="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:textAlignment="center"
            android:paddingLeft="24dp"
            android:backgroundTint="#FFF"
            android:paddingTop="13dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnGiaoDich"
        android:layout_marginTop="16dp"
        android:text="Cập nhật"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/radius"
        android:layout_width="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_height="48dp"/>
</LinearLayout>